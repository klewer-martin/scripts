#!/bin/bash

amount_to_increase=$1

current_volume=$(pamixer --get-volume)
max_volume=$((100 - $amount_to_increase))

(($current_volume<=$max_volume)) && $(pactl set-sink-volume @DEFAULT_SINK@ +$amount_to_increase%)

current_volume=$(pamixer --get-volume)
